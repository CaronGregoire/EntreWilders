{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h3>Veuillez entrer votre Pseudo et votre mot de passe pour vous connecter</h3>

    <div class="row d-flex">
        <form class="form col-9 col-sm-7 col-md-5 col-lg-3 mx-auto justify-content-center p-3 border border-2 border-primary shadow-lg p-3 mb-5" action="{{ path('security_login') }}" method="post">
            <div class="justify-content-center">
                <div class="mx-auto my-2 p-2">
                    <label for="Pseudo">Pseudo :</label>
                </div>
                <div>
                    <input type="text" class="border rounded-3 shadow-lg" id="Pseudo" name="_username" value="{{ last_username }}"/>
                </div>
                <div class="mx-auto my-2">
                </div>
                <div class="justify-content-center">
                    <div class="mx-auto my-2 p-2">
                        <label for="password">Mot de passe:</label>
                    </div>
                    <div>
                        <input type="password"  class="border rounded-3" id="password" name="_password"/>
                    </div>
                    <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
    </div>

{% endblock %}