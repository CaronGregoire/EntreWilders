{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid">
        <div class="d-flex flex-column justify-content-center" >
            <h1 class="mb-5 text-center">Formulaire d'inscription sur le site</h1>
        </div>

    <div class="row d-flex">
        <div class="col-11 col-sm-9 col-md-7 col-lg-5 mx-auto p-3 border border-2 shadow-lg p-3 mb-5 rounded">
            {{ form_start(form) }}
            <div class="row">
                {{ form_row(form.nickname) }}
            </div>
            <div class="row">
                {{ form_row(form.email) }}
            </div>
            <div class="row">
                {{ form_row(form.lastname) }}
            </div>
            <div class="row">
                {{ form_row(form.firstname) }}
            </div>
            <div class="row">
                {{ form_row(form.password) }}
            </div>
                <button type="submit" class="btn btn-success offset-5">Inscription !</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}