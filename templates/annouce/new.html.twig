{% extends 'base.html.twig' %}

{% block title %}Nouvelle Announce{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center" >
            <h1 class="mb-5 text-center">Formulaire de dépôt d'annonce</h1>
        </div>

        <div class="row d-flex">
            <div class="col-11 col-sm-9 col-md-7 col-lg-5 mx-auto p-3 border border-2 shadow-lg p-3 mb-5 rounded text-center">
                {{ form_start(form) }}
                <div class="row">
                    {{ form_row(form.title) }}
                </div>
                <div class="row">
                    {{ form_row(form.description) }}
                </div>
                <div class="row">
                    {{ form_row(form.price) }}
                </div>
                <div class="row">
                    {{ form_row(form.photo) }}
                </div>
                <div class="row">
                    {{ form_row(form.city) }}
                </div>
                <div class="row">
                    {{ form_row(form.category) }}
                </div>
                <button type="submit" class="btn btn-success">Publier !</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <a href="{{ path('home') }}">Retour à la liste des annonces</a>
{% endblock %}
